package view;


import processing.core.PApplet;

public class Main extends PApplet {

	Cuadrado[][] matriz;
	int tamañox;
	int tamañoy;
	int tipo=1;
	int tamano=20;
	int pos=20;
	

	public static void main(String[] args) {
		
		PApplet.main("view.Main");
	}
	
	
	public void settings() {
		size (600,400);
		
		
	}
	
	public void setup() {
		matriz = new Cuadrado[30][20];
		tamañox=30;
		tamañoy=20;
		
		
		for (int y=0; y < 20; y++) {
			
			 if (y % 2 == 0) {
			    	
			    	tipo=1;
			    }else {
			    	
			    	tipo=0;
			    	
			    }
			  for (int x=0; x < 30; x++) {
			 
			    	
			    matriz[y][x]=new Cuadrado((pos*y),(pos*x),tipo, null);
			   
			   
			    if (tipo==1) {
			    	
			    	tipo=0;
			    }else {
			    	
			    	tipo=1;
			    }
			  }
			}
		//System.out.println(matriz[20][19].getTipo()); 
		
	}
	
	public void draw() {
		
		background(150);

		for (int y=0; y < 20; y++) {
			
			  for (int x=0; x < 30; x++) {
			 	
				  if (matriz[y][x].getTipo()==1) {
						
						fill(0);
						
					}else {
						
						fill(255);
					}
					
					rect(matriz[y][x].getPosX(),matriz[y][x].getPosY(),matriz[y][x].getTamano(),matriz[y][x].getTamano());
					
			   
			  }
			}
		

}
	

}
